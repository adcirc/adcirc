include $(ESMFMKFILE)

ifneq ($(origin ADCDIR), environment)
  $(warning Environment variable ADCDIR was not set.)
  # this var is coming from NEMS/src/incmake/component_ADCIRC.mk  
  ADCDIR := $(COMP_SRCDIR)
